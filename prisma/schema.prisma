// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    role      String   @default("CLIENTE") // CLIENTE, ADMIN, IMOBILIARIA, AGENTE
    nome      String
    celular String   @unique
    email     String   @unique
    senha  String
    cpf       String? // Nullable (for common/admin/agente only)
    cnpj      String? // Nullable (for imobiliaria only)
    creci     String? // Nullable (for agente only)
    dataCriacao DateTime @default(now())
}
